<Window x:Class="HanoiTowers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hanoi Towers" Height="500" Width="800">
    <Grid>
        <Canvas Name="HanoiCanvas" Background="White" Margin="10,10,10,80"/>

        <!-- Панель управления -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,0,10,10">
            <TextBlock Text="Количество дисков:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Slider Name="DiskSlider" Minimum="1" Maximum="8" Value="3" Width="100" VerticalAlignment="Center"/>
            <Button Content="Начать" Click="Start_Click" Margin="10,0,10,0"/>
            <Button Content="Шаг вперед" Click="StepForward_Click" Margin="10,0,10,0"/>
            <Button Content="Сброс" Click="Reset_Click"/>
        </StackPanel>
    </Grid>
</Window>
