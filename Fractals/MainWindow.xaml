<Window x:Class="DragonFractal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fractal Dragon" Height="900" Width="900">
    <Grid>
        <!-- Холст для рисования фрактала -->
        <Canvas Name="MyCanvas" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,60,0,0"/>

        <!-- Панель управления -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <!-- Слайдер для изменения глубины рекурсии -->
            <TextBlock Text="Depth:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider Name="DepthSlider" Minimum="1" Maximum="16" Value="12" Width="150" Margin="0,0,20,0"/>
            <TextBlock Name="DepthTextBlock" VerticalAlignment="Center" Margin="5,0,20,0"/>

            <!-- Слайдер для изменения размера -->
            <TextBlock Text="Size:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider Name="SizeSlider" Minimum="100" Maximum="600" Value="400" Width="150" Margin="0,0,20,0"/>
            <TextBlock Name="SizeTextBlock" VerticalAlignment="Center" Margin="5,0,20,0"/>

            <!-- Кнопка для запуска отрисовки -->
            <Button Name="DrawButton" Content="Draw Fractal" Width="100" Height="30" Click="DrawButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
