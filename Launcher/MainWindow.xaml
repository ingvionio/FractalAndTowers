<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор задачи" Height="370" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Margin="20">
            <TextBlock Text="Выбор задачи" FontSize="26" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,30" HorizontalAlignment="Center" />
            <Button Content="Фрактал Дракона" Width="240" Height="50" Margin="0,15"
                    Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="OpenFractalPage_Click"/>
            <Button Content="Ханойские башни" Width="240" Height="50" Margin="0,15"
                    Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="OpenHanoiPage_Click"/>
            <Button Content="График Ханой" Width="240" Height="50" Margin="0,15"
                    Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="OpenGraphPage_Click"/>
        </StackPanel>
    </Grid>
</Window>